<!DOCTYPE html>
<html>
<head>
  <title>Auto Parts Store</title>
</head>
<body>
  <h2>Add Part</h2>
  <input id="part" placeholder="Part Name">
  <input id="price" placeholder="Price">
  <button onclick="add()">Add to Store</button>

  <h2>Cart</h2>
  <ul id="cart"></ul>

  <script>
    let items = JSON.parse(localStorage.getItem("cart")) || [];

    function add() {
      items.push({ part: part.value, price: price.value });
      localStorage.setItem("cart", JSON.stringify(items));
      show();
    }

    function show() {
      cart.innerHTML = "";
      items.forEach(i =>
        cart.innerHTML += `<li>${i.part} - â‚¹${i.price}</li>`
      );
    }
    show();
  </script>
</body>
</html>
