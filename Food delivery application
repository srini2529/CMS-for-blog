<!DOCTYPE html>
<html>
<head>
  <title>Food Delivery</title>
</head>
<body>
  <h2>Add Food Item</h2>
  <input id="food" placeholder="Food Name">
  <input id="price" placeholder="Price">
  <button onclick="order()">Order</button>

  <h2>Orders</h2>
  <ul id="orders"></ul>

  <script>
    let data = JSON.parse(localStorage.getItem("orders")) || [];

    function order() {
      data.push({ food: food.value, price: price.value });
      localStorage.setItem("orders", JSON.stringify(data));
      show();
    }

    function show() {
      orders.innerHTML = "";
      data.forEach(o =>
        orders.innerHTML += `<li>${o.food} - â‚¹${o.price} (Ordered)</li>`
      );
    }
    show();
  </script>
</body>
</html>
